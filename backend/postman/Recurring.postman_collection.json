{
  "info": {
    "_postman_id": "recurring-collection-2025-06-20",
    "name": "ExpenseTracker Recurring API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for Recurring Transaction endpoints (CRUD)"
  },
  "item": [
    {
      "name": "Get All Recurring Transactions",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/recurring",
          "host": ["{{baseUrl}}"],
          "path": ["api", "recurring"]
        }
      }
    },
    {
      "name": "Get Recurring Transaction By ID",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/recurring/:id",
          "host": ["{{baseUrl}}"],
          "path": ["api", "recurring", ":id"]
        }
      }
    },
    {
      "name": "Create Recurring Transaction",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"amount\": 50,\n  \"type\": \"expense\",\n  \"category\": \"Subscription\",\n  \"account\": \"Main Checking\",\n  \"interval\": \"monthly\",\n  \"startDate\": \"2025-06-01\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/recurring",
          "host": ["{{baseUrl}}"],
          "path": ["api", "recurring"]
        }
      }
    },
    {
      "name": "Update Recurring Transaction",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"amount\": 60,\n  \"type\": \"expense\",\n  \"category\": \"Subscription\",\n  \"account\": \"Main Checking\",\n  \"interval\": \"monthly\",\n  \"startDate\": \"2025-06-01\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/recurring/:id",
          "host": ["{{baseUrl}}"],
          "path": ["api", "recurring", ":id"]
        }
      }
    },
    {
      "name": "Delete Recurring Transaction",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/recurring/:id",
          "host": ["{{baseUrl}}"],
          "path": ["api", "recurring", ":id"]
        }
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5000" },
    { "key": "token", "value": "" }
  ]
}
