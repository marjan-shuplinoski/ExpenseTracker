{
  "info": {
    "_postman_id": "b7e1e7e2-6c2a-4b7a-9e2e-8e2e7e2e7e2e",
    "name": "ExpenseTracker Reports API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for Reports endpoints (summary, monthly, yearly, export)"
  },
  "item": [
    {
      "name": "Get Summary Report",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/reports/summary",
          "host": ["{{baseUrl}}"],
          "path": ["api", "reports", "summary"]
        }
      }
    },
    {
      "name": "Get Monthly Report",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/reports/monthly",
          "host": ["{{baseUrl}}"],
          "path": ["api", "reports", "monthly"]
        }
      }
    },
    {
      "name": "Get Yearly Report",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/reports/yearly",
          "host": ["{{baseUrl}}"],
          "path": ["api", "reports", "yearly"]
        }
      }
    },
    {
      "name": "Export Report (CSV)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/reports/export/csv",
          "host": ["{{baseUrl}}"],
          "path": ["api", "reports", "export", "csv"]
        }
      }
    },
    {
      "name": "Export Report (PDF)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/reports/export/pdf",
          "host": ["{{baseUrl}}"],
          "path": ["api", "reports", "export", "pdf"]
        }
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5000" },
    { "key": "token", "value": "" }
  ]
}
